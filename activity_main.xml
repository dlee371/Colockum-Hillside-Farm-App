<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/FarmInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Farm Info"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/MessageInput"
        android:layout_width="261dp"
        android:layout_height="97dp"
        android:hint="Dear Colockum..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866" />

    <TextView
        android:id="@+id/ContactTitle"
        android:layout_width="146dp"
        android:layout_height="36dp"
        android:text="Contact Us!"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FarmInfoTitle"
        app:layout_constraintVertical_bias="0.393" />

    <TextView
        android:id="@+id/FarmEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="suzanne@colockumhillsidefarm.con"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MessageInput" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="344dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toTopOf="@+id/MessageInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ContactTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/UserEmailInput"
            android:layout_width="345dp"
            android:layout_height="48dp"
            android:hint="Email:" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/FarmInfoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert Farm Info"
        app:layout_constraintBottom_toTopOf="@+id/ContactTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FarmInfoTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>
